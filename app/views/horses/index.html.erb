<div class="user-new-top">
<%= link_to '戻る',surveys_path,class:'survey-return-btn'%>
</div>

<div class="user-new-main">
 馬の登録
 <div class="user-new-forms">
   <%= form_with model:@horse,local:true do |f| %>
   <%= f.label '名'%>
   <%= f.text_field :name,class:"horse-name"%>
      <%= f.label '性'%>
        <%= f.collection_select(:horsegender_id, Horsegender.all, :id, :name, {}, {class:"select-box", id:"horse-gender"}) %>
<div class='input-birth-wrap'>
<%= f.label '生年月日'%><br>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>   
    <%end%>
   </div>
</div>